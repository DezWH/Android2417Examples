<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ButtonBlueCapsMonospace">
        <item name="android:background">@color/buttonBlue</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="GradientFill">
        <item name="android:background">@drawable/background_orange_yellow_gradient</item>
    </style>


    <style name="OrangeRoundCornerBorder">
        <item name="android:background">@drawable/background_orange_border_purple_fill</item>
    </style>

</resources>


